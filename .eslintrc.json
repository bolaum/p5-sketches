{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": "airbnb-base",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "allowImportExportEverywhere": true
  },
  "rules": {
    "max-len": ["error", { "code": 120 }],
    "class-methods-use-this": 0,
    "no-underscore-dangle": 0,
    "no-param-reassign": 0,
    "no-new": 0
  }
}
